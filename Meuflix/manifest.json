{
  "manifest_version": 3,
  "name": "Meuflix",
  "version": "1.0",
  "description": "Meuflix - Sua plataforma de streaming",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "https://startflix-login--next_tv.on.websim.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "StartFlix"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; frame-src https://startflix-login--next_tv.on.websim.com/;"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}